<div class="container d-flex flex-column align-items-center text-center vh-100">

    <form action="/cars" method="POST" class="p-3 mt-3">
        <select name="sort" class="form-select h-50">
            <option value="AZ">
                A-Z
            </option>
            <option value="ZA">
                Z-A
            </option>
            <option value="favAsc">
                Number of favorites (Asc)
            </option>
            <option value="favDesc">
                Number of avorites (Desc)
            </option>
        </select>

        <button type="submit" class="btn-primary w-50 h-50">Apply filter</button>
    </form>

    <div class="container d-flex flex-row flex-wrap justify-content-evenly mb-3">
        {{#each cars}}
        {{> carCard this}}
        {{/each}}
    </div>

    {{>footNote}}

</div>